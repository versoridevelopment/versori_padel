// prisma/schema.prisma

// Genera el cliente Prisma
generator client {
  provider = "prisma-client-js"
}

// Configura el datasource apuntando a tu base PostgreSQL de Supabase
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // Supabase usa el schema p√∫blico por defecto, no hace falta cambiarlo
  // schemas = ["public"] // solo si tuvieras otro schema
}
